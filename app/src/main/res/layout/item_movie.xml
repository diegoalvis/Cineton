<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:background="@color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    android:elevation="@dimen/cardview_default_elevation">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/iv_site_image"
                android:src="@drawable/imagen"
                android:scaleType="centerCrop"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


                <ImageView
                    android:elevation="1dp"
                    android:background="@drawable/gradient_image"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_menu_manage"
                android:text="Gran inaguracion de Rumba BAR"
                android:drawableTint="@color/white"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_name_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_date"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_menu_manage"
                android:drawableTint="@color/white"
                android:text="Gran inaguracion de Rumba BAR"
                android:textColor="@color/white"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="3dp"
                android:id="@+id/iv_image_user_1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:elevation="3dp"
                android:background="@drawable/circle_white_30dp"
                app:civ_border_width="11dp"
                app:civ_border_color="@color/black"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="3dp"
                android:id="@+id/iv_image_user_2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_image_user_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:elevation="3dp"
                android:background="@drawable/circle_white_30dp"
                app:civ_border_width="11dp"
                app:civ_border_color="@color/black"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="3dp"
                android:id="@+id/iv_image_user_3"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_image_user_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:elevation="3dp"
                android:background="@drawable/circle_white_30dp"
                app:civ_border_width="11dp"
                app:civ_border_color="@color/black"/>

            <TextView
                android:id="@+id/tv_num_interes"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_toRightOf="@id/iv_image_user_3"
                android:layout_centerVertical="true"
                android:text="+47 personas interesadas"/>

            <ImageView
                android:id="@+id/ic_interes"
                android:layout_margin="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_send" />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
